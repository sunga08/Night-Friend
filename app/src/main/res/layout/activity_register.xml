<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="40dp"
    android:layout_marginRight="25dp">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="67dp"
        android:layout_height="27dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="266dp"
        android:text="아이디"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/et_sign_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_sign_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="아이디를 입력하시오"
        android:inputType="textPersonName"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="10dp"
        android:text="비밀번호"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/et_sign_password"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/drawer_userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="10dp"
        android:text="생년월일"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/et_sign_age"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_sign_age"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginBottom="143dp"
        android:ems="10"
        android:maxLength="6"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/btn_sign"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="29dp"
        android:layout_height="42dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="139dp"
        android:text="-"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_sign"
        app:layout_constraintStart_toEndOf="@+id/et_sign_age"
        app:layout_constraintTop_toBottomOf="@+id/et_sign_password"
        app:layout_constraintVertical_bias="0.978" />

    <EditText
        android:id="@+id/et_sign_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="56dp"
        android:ems="10"
        android:hint="비밀번호를 입력하시오"
        android:inputType="textPassword"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/et_sign_age"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_sign_gender"
        android:layout_width="31dp"
        android:layout_height="37dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/et_sign_password" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="69dp"
        android:layout_height="32dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="37dp"
        android:text="******"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/et_sign_gender"
        app:layout_constraintTop_toBottomOf="@+id/et_sign_password" />

    <Button
        android:id="@+id/btn_sign"
        android:layout_width="122dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/button_matching"
        android:text="회원가입"
        android:textColor="#FFFFFF"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_multi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="278dp"
        android:layout_marginEnd="16dp"
        android:text="중복체크"
        android:textColor="#3872D6"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_sign_id" />
</androidx.constraintlayout.widget.ConstraintLayout>