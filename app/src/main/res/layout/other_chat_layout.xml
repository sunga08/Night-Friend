<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_chatName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:text="이름"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_chatMsg"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_below="@id/tv_chatName"
        android:layout_alignLeft="@id/tv_chatName"
        android:layout_alignParentBottom="false"
        android:background="@drawable/button_matching"
        android:gravity="center"
        android:text="메세지"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_chatTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_chatMsg"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"
        android:textColor="#000000"
        android:textSize="16sp" />
</RelativeLayout>